{{#each errors}}
  <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="card">

  <div class="card-body">
    <h4>Nova postagem: </h4>
    <form action="/admin/posts/nova" method="post">
      <label for="title">Título</label>
      <input type="text" name="title" class="form-control" required />
      <label for="title">Slug</label>
      <input type="text" name="slug" class="form-control" required />
      <label for="description">Descrição: </label>
      <input type="text" name="description" class="form-control" required />
      <label for="content">Conteúdo: </label>
      <textarea name="content" class="form-control mb-3" required></textarea>
      <label for="category">Categoria: </label>
      <select name="category" class="custom-select mb-3">
        {{#each categories}}
          <option value="{{_id}}">{{name}}</option>
        {{else}}
          <option value="0">Nenhuma categoria registrada</option>
        {{/each}}
      </select>
      <button class="btn btn-success" type="submit">Criar postagem</button>
    </form>
  </div>

</div>